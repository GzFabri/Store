{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "*": ["*"]
    },
    "module": "esnext", 
    "moduleResolution": "node",
    "target": "es2016",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}

